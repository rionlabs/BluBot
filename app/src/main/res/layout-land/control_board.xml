<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_normal"
        android:columnCount="7"
        android:rowCount="3">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonA"
            style="@style/ControlBoard.Button"
            android:layout_row="1"
            android:layout_column="4"
            android:src="@drawable/ic_button_a" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonUp"
            style="@style/ControlBoard.Button"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/ic_button_dir_up" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonB"
            style="@style/ControlBoard.Button"
            android:layout_row="0"
            android:layout_column="5"
            android:src="@drawable/ic_button_b" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonLeft"
            style="@style/ControlBoard.Button"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/ic_button_dir_left" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonClose"
            style="@style/ControlBoard.Button"
            android:layout_row="2"
            android:layout_column="3"
            android:src="@drawable/ic_button_close" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonRight"
            style="@style/ControlBoard.Button"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/ic_button_dir_right" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonC"
            style="@style/ControlBoard.Button"
            android:layout_row="1"
            android:layout_column="6"
            android:src="@drawable/ic_button_c" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonDown"
            style="@style/ControlBoard.Button"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/ic_button_dir_down" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonD"
            style="@style/ControlBoard.Button"
            android:layout_row="2"
            android:layout_column="5"
            android:src="@drawable/ic_button_d" />

    </GridLayout>
</layout>